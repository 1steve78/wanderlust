<% layout("layouts/boilerplate") %>

<div class="container listings-container mt-4">

  <!-- Heading -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold">
      Search Results for: 
      <span style="color: #fe424d;">"<%= q %>"</span>

    </h4>

    <a href="/listings" class="btn btn-outline-dark btn-sm">
      <i class="fa-solid fa-border-all"></i> View All
    </a>
  </div>

  <!-- No listings -->
  <% if (listings.length === 0) { %>
    <div class="no-results-box text-center py-5">
      <i class="fa-solid fa-search fa-3x text-muted mb-3"></i>
      <h5 class="text-muted">No results found</h5>
      <p class="small text-muted mb-3">Try using a different keyword.</p>
      <a href="/listings" class="btn btn-dark">Back to All Listings</a>
    </div>
  <% } %>

  <!-- Listings grid -->
  <div class="row mt-3">
    <% listings.forEach(listing => { %>
      <div class="col-md-4 col-sm-6 mb-4">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card listing-card">

            <img 
              src="<%= listing.image?.url || 'https://via.placeholder.com/300' %>" 
              class="card-img-top"
              alt="<%= listing.title %>"
            >

            <div class="card-body mt-2">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text text-muted">
                <%= listing.location %><br>
                â‚¹<%= listing.price %>
              </p>

              
            </div>

          </div>
        </a>
      </div>
    <% }) %>
  </div>

</div>
