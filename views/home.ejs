<% layout("layouts/boilerplate") %>

<!-- Hero Section -->
<div class="container mt-5 mb-5">
  <div class="row align-items-center">
    
    <!-- Left Text -->
    <div class="col-lg-6 col-md-6 col-sm-12 mb-4">
      <h1 class="display-5 fw-bold" style="color:#fe424d;">
        Find your perfect stay.
      </h1>

      <p class="lead mt-3" style="font-weight: 500;">
        Explore premium rooms, homes, and destinations across the world — all verified, reviewed, and trusted.
      </p>

      <a href="/listings" class="btn btn-dark btn-lg mt-3 px-4 py-2" style="border-radius: 2rem;">
        Browse Listings
      </a>
    </div>

    <!-- Right Image -->
    <div class="col-lg-6 col-md-6 col-sm-12">
      <div class="card listing-card shadow-sm" style="border:none;">
        <img 
          src="https://images.pexels.com/photos/1115804/pexels-photo-1115804.jpeg"
          class="card-img-top"
          style="border-radius: 1rem; height: 350px; object-fit: cover;"
          alt="Hero Image"
        >
      </div>
    </div>
  </div>
</div>

<!-- Divider -->
<div class="container">
  <div class="border-top border-2 border-dark opacity-50 mb-5"></div>
</div>

<!-- Features Section -->
<div class="container mb-5">
  <div class="row text-center">

    <div class="col-md-4 mb-4">
      <i class="fas fa-map-marked-alt fa-2x" style="color:#fe424d;"></i>
      <h5 class="mt-3 fw-bold">Verified Locations</h5>
      <p>Every listing is double-checked for accuracy, safety, and comfort.</p>
    </div>

    <div class="col-md-4 mb-4">
      <i class="fas fa-home fa-2x" style="color:#fe424d;"></i>
      <h5 class="mt-3 fw-bold">Clean & Comfortable Homes</h5>
      <p>Experience stays that feel like home — fully equipped and welcoming.</p>
    </div>

    <div class="col-md-4 mb-4">
      <i class="fas fa-wallet fa-2x" style="color:#fe424d;"></i>
      <h5 class="mt-3 fw-bold">Affordable Options</h5>
      <p>Premium experiences, budget-friendly stays — perfect for everyone.</p>
    </div>

  </div>
</div>

<!-- Recent Listings Preview (Optional but beautiful) -->
<div class="container mb-5">
  <h3 class="mb-4 fw-bold">Popular stays</h3>

  <div class="row">

    <!-- Demo Card 1 -->
    <div class="col-md-4 mb-4">
      <a href="/listings" class="listing-link">
        <div class="card listing-card">
          <img src="https://images.unsplash.com/photo-1502920514313-52581002a659"
               class="card-img-top" style="height: 250px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title mt-2">Beachside Villa</h5>
            <p class="card-text">Goa, India</p>
          </div>
        </div>
      </a>
    </div>

    <!-- Demo Card 2 -->
    <div class="col-md-4 mb-4">
      <a href="/listings" class="listing-link">
        <div class="card listing-card">
          <img src="https://images.unsplash.com/photo-1505691723518-36a5ac3be353"
               class="card-img-top" style="height: 250px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title mt-2">Mountain Cabin</h5>
            <p class="card-text">Himachal, India</p>
          </div>
        </div>
      </a>
    </div>

    <!-- Demo Card 3 -->
    <div class="col-md-4 mb-4">
      <a href="/listings" class="listing-link">
        <div class="card listing-card">
          <img src="https://images.pexels.com/photos/11682802/pexels-photo-11682802.jpeg"
               class="card-img-top" style="height: 250px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title mt-2">Urban Apartment</h5>
            <p class="card-text">Bangalore, India</p>
          </div>
        </div>
      </a>
    </div>

  </div>
</div>
